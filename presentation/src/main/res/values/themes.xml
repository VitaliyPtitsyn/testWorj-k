<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestWorkVitaliyPtitsyn" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="recyclerViewStyle">@style/AppTheme.recycler</item>
        <item name="android:textViewStyle">@style/AppTheme.textStyle</item>

    </style>

    <style name="AppTheme" />

    <style name="AppTheme.recycler">
        <item name="android:paddingStart">@dimen/distance</item>
        <item name="android:paddingEnd">@dimen/distance</item>
        <item name="android:paddingTop">@dimen/doubleDistance</item>
        <item name="android:paddingBottom">144dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="AppTheme.textStyle">
        <item name="android:paddingStart">@dimen/minDistance</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.textStyle.TableTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">@dimen/distance</item>
    </style>

    <style name="AppTheme.textStyle.TableRow">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hintColor</item>
        <item name="android:paddingStart">@dimen/distance</item>
    </style>

    <style name="AppTheme.textStyle.SelectedRow">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>